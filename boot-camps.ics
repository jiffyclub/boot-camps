---
title: Boot Camps
root: .
---
BEGIN:VCALENDAR
VERSION:2.0
PRODID:-//Software Carpentry/Boot Camps//NONSGML v1.0//EN
{% for bootcamp in site.posts %}BEGIN:VEVENT
UID:{{bootcamp.url | replace: '/', '' | replace: '.html', ''}}@{{site.host}}
DTSTAMP:{{ site.time | date: '%Y%m%dT%H%M%SZ'}}
DTSTART;VALUE=DATE:{{ bootcamp.date | date: '%Y%m%d'}}
{% if bootcamp.days %}DURATION:P{{bootcamp.days}}D
{% endif %}SUMMARY:{{ bootcamp.title | replace: '\', '\\' | replace: ';', '\;' | replace: ',', '\,' }}
DESCRIPTION;ALTREP="http://{{site.host}}{{site.baseurl}}{{bootcamp.url}}":http://{{site.host}}{{site.baseurl}}{{bootcamp.url}}
{% if bootcamp.venue %}LOCATION:{{bootcamp.venue}}
{% endif %}{% if bootcamp.latlng %}GEO:{{ bootcamp.latlng | replace: ',', ';' }}
{% endif %}END:VEVENT
{% endfor %}END:VCALENDAR
